<h1>Listing missions</h1>
<br />
<h4> <a href="/missions/new"><i class="fa fa-plus"></i> Add a mission</a></h4>
<br />


<div class="panel-group" id="accordion">
  <% @missions.each do |mission| %>
    <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#<%= mission.id %>" style="display:block">
          <%= mission.name %>
        </a>
      </h4>
    </div>
    <div id="<%= mission.id %>" class="panel-collapse collapse off">
      <div class="panel-body">
        <div class="buttons">
          <a href="/missions/<%= mission.id %>"><i class="fa fa-eye"></i></a>
          <a href="/missions/<%= mission.id %>/edit"><i class="fa fa-edit"></i></a>
          <a data-confirm="Are you sure?" data-method="delete" href="/missions/<%= mission.id %>" rel="nofollow"><i class="fa fa-trash-o"></i></a>
        </div>
        <h3><%= mission.name %></h3><br />
        <div class="scroller">
          <p><%=raw mission.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
$(document).ready(function() {

  $('.scroller').slimScroll({
    height: '400px'
  });

});
</script>